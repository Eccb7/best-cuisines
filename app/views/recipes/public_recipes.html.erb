<div class="card mb-3 bg-light text-dark" id="public_card">
  <h1>Public Recipes</h1>
  <% @public_recipes.each do |recipe| %>
    <div class="row g-0">
      <div class="col-md-6">
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to recipe.name, recipe_path(recipe), class: "text-dark" %>
          </h5>
          <p class="card-text">
            By <%= recipe.user.name %>
          </p>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card-body text-md-end text-end">
          <div class="px-4">
            <p class="mb-2">Total Food Items: <%= recipe.recipe_foods.length %></p>
            <p>Total Price: $<%= recipe.recipe_foods.sum { |recipe_food| recipe_food.food.price * recipe_food.quantity } %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
