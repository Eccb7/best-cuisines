<div class="card mb-3 bg-light text-dark">
  <div class="row g-0">
    <div class="col-md-6">
      <div class="card-body">
        <h5 class="card-title">
          <%= link_to recipe.name, recipe_path(recipe), class: "text-dark" %>
        </h5>
        <% if current_user_owns_recipe?(recipe) %>
          <%= form_with(model: recipe, method: :delete, data: { confirm: "Are you sure?" }, class: "d-inline") do |form| %>
            <%= form.submit "Remove", class: "btn btn-danger" %>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card-body">
        <p class="card-text"><%= recipe.description %></p>
      </div>
    </div>
  </div>
</div>
<hr class="border border-success border-2 opacity-50">